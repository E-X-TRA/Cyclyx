<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_font_left">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/font_bold_purple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="card_font_right">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/font_green</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="cardSetting_hasil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_list</item>
    </style>
    
    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColorHint">@color/FontColorBlack</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="TextViewTitle.Blue">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo2_bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/font_light_blue</item>
        <item name="android:background">@drawable/rounded_btn_pengenalan2</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="WhiteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo2_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_btn_white</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="GenderButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo2_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/font_light_blue</item>
        <item name="android:background">@drawable/rounded_btn_pengenalan2</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo2_bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:background">@drawable/rounded_btn_pengenalan</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

</resources>
