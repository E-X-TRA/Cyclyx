<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="bersepeda"
                type="com.extra.cyclyx.entity.Bersepeda" />
        <variable
                name="clickListener"
                type="com.extra.cyclyx.utils.adapter.RiwayatClickListener" />
        <variable
                name="isFinished"
                type="Boolean" />
    </data>

    <LinearLayout
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/tantangancircle"
                android:gravity="center"></LinearLayout>

        <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtTercepat"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="30km/jam"
                    android:fontFamily="@font/exo2_bold"
                    android:textColor="#304FFE"
                    android:textSize="22dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Kecepatan tercepat"
                    android:fontFamily="@font/exo2_regular"
                    android:textColor="#96000000"
                    android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</layout>
