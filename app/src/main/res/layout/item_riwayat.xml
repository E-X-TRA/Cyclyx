<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="bersepeda"
                type="com.extra.cyclyx.entity.Bersepeda" />

        <variable
                name="clickListener"
                type="com.extra.cyclyx.adapter.RiwayatClickListener" />

        <variable
                name="isFinished"
                type="Boolean" />
    </data>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_margin="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_3sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundComponent"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_4sdp">

                <TextView
                        android:id="@+id/tv_itemR_tanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        tools:text="12 Agustus 2019" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                app:cardCornerRadius="4dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundComponent"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp">

                <TextView
                        android:id="@+id/tv_itemR_waktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        app:durationToString="@{bersepeda}"
                        tools:text="34:21" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_3sdp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundComponent"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp">

                <TextView
                        android:id="@+id/tv_itemR_jarak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        app:formatDouble="@{bersepeda.distance}"
                        tools:text="12 KM" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</layout>
