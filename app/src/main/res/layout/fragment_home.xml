<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.extra.cyclyx.ui.home.HomeViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_4">

        <LinearLayout
                android:id="@+id/main"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

<!--            <com.gauravbhola.ripplepulsebackground.RipplePulseLayout-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                    android:layout_width="@dimen/_125sdp"-->
<!--                    android:layout_height="@dimen/_125sdp"-->
<!--                    android:clipChildren="false"-->
<!--                    app:rippleColor="@color/bg_tantangan"-->
<!--                    app:rippleType="fill"-->
<!--                    app:startRadius="@dimen/_125sdp"-->
<!--                    app:endRadius="@dimen/_200sdp"-->
<!--                    app:duration="1000"-->
<!--                    android:id="@+id/layout_ripplepulse">-->
                <Button
                        android:id="@+id/btnGo"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_125sdp"
                        android:background="@drawable/circle_button"
                        android:foreground="@drawable/ripple_effect"
                        android:layout_gravity="center_horizontal"/>
<!--            </com.gauravbhola.ripplepulsebackground.RipplePulseLayout>-->

            <TextView
                    android:id="@+id/TxtMonthNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/exo2_bold"
                    android:text="@{viewModel.stringMonth}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F0FFFFFF"
                    tools:text="November" />

            <TextView
                    android:id="@+id/TxtObj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/exo2_light"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#F0FFFFFF"
                    android:textSize="@dimen/_15ssp"
                    android:text="Objective: 30 km" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_25sdp">

            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@color/cardview_light_background"
                    android:padding="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_7sdp"
                    app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_17sdp"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/TxtRecentJarak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_bold"
                                android:text="10.83 km"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="#B4E308"
                                android:textSize="@dimen/_20ssp" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_regular"
                                android:text="@string/txt_distance"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="#858585" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_17sdp"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/TxtRecentDur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_bold"
                                android:text="01:06:23"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="#E36E08"
                                android:textSize="@dimen/_20ssp" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_regular"
                                android:text="@string/txt_duration"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="#858585" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@color/cardview_light_background"
                    android:padding="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_17sdp"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/TxtOldJarak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_bold"
                                android:text="12.43 km"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="#B4E308"
                                android:textSize="@dimen/_20ssp" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_regular"
                                android:text="@string/txt_distance"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="#858585" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_17sdp"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/TxtOldDur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_bold"
                                android:text="01:23:43"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="#E36E08"
                                android:textSize="@dimen/_20ssp" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo2_regular"
                                android:text="@string/txt_duration"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="#858585" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>