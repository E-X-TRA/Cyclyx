<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PengaturanFragment"
        android:background="@drawable/bg_6">

    <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Pegaturan"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/hemat_daya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/judul"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:background="@color/bg_card">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mode Hemat Daya"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/exo2_bold"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mengurangi penggunaan daya ponsel"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#868686"
                    android:fontFamily="@font/exo2_regular"
                    android:layout_marginTop="14dp"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NYALAKAN MODE"
                    android:textColor="@color/whiteText"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/optimisasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hemat_daya"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:background="@color/bg_card">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Optimisasi"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/exo2_bold"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meningkatkan performa aplikasi"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#868686"
                    android:fontFamily="@font/exo2_regular"
                    android:layout_marginTop="14dp"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NYALAKAN"
                    android:textColor="@color/whiteText"
                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>