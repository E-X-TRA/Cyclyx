<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/slideuppane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        app:umanoDragView="@id/dragview"
        app:umanoFadeColor="#00000000"
        app:umanoInitialState="expanded"
        app:umanoOverlay="true"
        app:umanoShadowHeight="0dp"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEE3C4">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/db_intersection" />

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/dragview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_168sdp"
            android:background="#00000000"
            android:clickable="true"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/rounded_button"
                android:gravity="center">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/view"
                    android:background="#00000000"
                    android:padding="10dp">

                <ImageButton
                        android:id="@+id/imgPause"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/pause" />

            </LinearLayout>

            <View
                    android:id="@+id/view"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/view"
                    android:background="#00000000"
                    android:padding="10dp">

                <ImageButton
                        android:id="@+id/imgStop"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/stop" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_7"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#EE6352"
                    app:cardCornerRadius="7.5dp"
                    app:cardElevation="10dp">

                <LinearLayout
                        android:id="@+id/tttl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exo2_regular"
                            android:text="@string/txt_waktu"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#FFF"
                            android:textSize="@dimen/_14ssp" />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF" />
                </LinearLayout>

                <Chronometer
                        android:id="@+id/chronometer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/exo2_regular"
                        android:padding="10dp"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#57A773"
                    app:cardCornerRadius="7.5dp"
                    app:cardElevation="10dp">

                <LinearLayout
                        android:id="@+id/tttl2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exo2_regular"
                            android:text="@string/txt_jarak"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#FFF"
                            android:textSize="@dimen/_14sdp" />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/exo2_regular"
                            android:text="200 M"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#484D6D"
                    app:cardCornerRadius="7.5dp"
                    app:cardElevation="10dp">

                <LinearLayout
                        android:id="@+id/tttl3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exo2_regular"
                            android:text="@string/txt_kecepatan"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#FFF"
                            android:textSize="@dimen/_14sdp" />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#FFF" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/exo2_regular"
                            android:text="20 Km/H"
                            android:textColor="#FFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>