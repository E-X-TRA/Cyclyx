<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dets"
        android:layout_marginHorizontal="10dp">
        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icUser"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/user"
                android:tint="#000"/>
            <LinearLayout
                android:layout_below="@id/icUser"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserName"
                    android:text="John Doe"
                    android:textColor="#494949"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="32dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserType"
                    android:text="Pesepeda"
                    android:textColor="#96494949"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="24dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            </LinearLayout>
        </RelativeLayout>
        <ImageView
            app:layout_constraintBottom_toTopOf="@id/div"
            app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/BtnSettings"
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_settings_black_24dp"/>
        <View
            android:id="@+id/div"
            app:layout_constraintBottom_toTopOf="@id/more"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3B000000"/>
        <LinearLayout
            android:id="@+id/more"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserTtgDone"
                    android:text="14"
                    android:textColor="#E30808"
                    android:fontFamily="@font/exo2_bold"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tantangan"
                    android:textColor="#494949"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserJarak"
                    android:text="42"
                    android:textColor="#B4E308"
                    android:fontFamily="@font/exo2_bold"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilometer"
                    android:textColor="#494949"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserJam"
                    android:text="8"
                    android:textColor="#E36E08"
                    android:fontFamily="@font/exo2_bold"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam"
                    android:textColor="#494949"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:id="@+id/dets"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:id="@+id/TxtUserAge"
                android:textColor="#087DE3"
                android:text="23"
                android:fontFamily="@font/exo2_bold"
                android:textSize="22dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usia"
                android:fontFamily="@font/exo2_regular"
                android:textSize="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserWeight"
                    android:text="67"
                    android:textColor="#087DE3"
                    android:fontFamily="@font/exo2_bold"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilogram"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:id="@+id/TxtUserHeight"
                    android:text="178"
                    android:textColor="#087DE3"
                    android:fontFamily="@font/exo2_bold"
                    android:textSize="22dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centimeter"
                    android:fontFamily="@font/exo2_regular"
                    android:textSize="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>