<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_5"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_13sdp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_bold"
                android:text="@string/txt_riwayat"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#2962FF"
                android:textSize="@dimen/_27ssp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#96000000"
                android:textSize="@dimen/_15ssp"
                tools:text="Hari ini, 14 November" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_126sdp"
            android:layout_margin="@dimen/_8sdp"
            android:backgroundTint="@color/whiteText"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/head">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_17sdp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_bold"
                    android:text="@string/txt_membakar_kalori"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#0C1B44"
                    android:textSize="@dimen/_22sdp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#00C80A"
                    android:textSize="@dimen/_17ssp"
                    tools:text="65,356 kkal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/card">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_4sdp"
                    android:contentDescription="@string/txt_kecepatan_tercepat"
                    android:src="@drawable/tantangancircle" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exo2_bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#304FFE"
                        android:textSize="@dimen/_19ssp"
                        tools:text="30km/jam" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exo2_regular"
                        android:text="@string/txt_kecepatan_tercepat"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#96000000"
                        android:textSize="@dimen/_13ssp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_4sdp"
                    android:contentDescription="@string/txt_kecepatan_tercepat"
                    android:src="@drawable/tantangancircle" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exo2_bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FF6D00"
                        android:textSize="@dimen/_19ssp"
                        tools:text="15 jam" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exo2_regular"
                        android:text="@string/txt_total_waktu_bersepeda"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#96000000"
                        android:textSize="@dimen/_13ssp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_4sdp"
                    android:contentDescription="@string/txt_kecepatan_tercepat"
                    android:src="@drawable/tantangancircle" />


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exo2_bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#C51162"
                        android:textSize="@dimen/_19ssp"
                        tools:text="30.7 km" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exo2_regular"
                        android:text="@string/txt_total_jarak_bersepeda"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#96000000"
                        android:textSize="@dimen/_13ssp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>