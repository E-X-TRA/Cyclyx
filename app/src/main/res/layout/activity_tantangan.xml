<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_5"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_13sdp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_bold"
                android:text="@string/text_tantangan"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#2962FF"
                android:textSize="@dimen/_27ssp" />

        <TextView
                android:id="@+id/TxtTodayDateTtg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_regular"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#96000000"
                android:textSize="@dimen/_15ssp"
                tool:text="Hari ini, 14 November" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_126sdp"
            android:layout_margin="@dimen/_8sdp"
            android:backgroundTint="@color/bg_tantangan"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/head">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_17sdp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/TxtTtg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_bold"
                    android:text="@string/your_cycling_plan_for_today"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#0C1B44"
                    android:textSize="@dimen/_25ssp" />

            <TextView
                    android:id="@+id/TxtPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo2_regular"
                    android:text="@string/txt_waktu_kalori"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#96000000"
                    android:textSize="@dimen/_14ssp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/card">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_bold"
                android:text="@string/txt_pencapaianmu"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#96000000"
                android:textSize="@dimen/_18ssp" />



        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPencapaian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>